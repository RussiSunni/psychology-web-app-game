<!DOCTYPE html>
<html lang="">

<%- include('partials/head'); %>

  <body>
    <!-- Sidebar -->
    <button class="sidebar-btn btn" onclick="ToggleSidebar()">
      <img src="./icons/info-solid.svg" height="24">
    </button>
    <div class="sidebar sidebar-animate-right" style="width:200px;right:0; top: 43px" id="sidebar">
      <h4 class="pe-3 mt-2">Cheat Sheet</h4>
      <p class="pe-3"><em>(Case doesn't matter)</em></p>
      <h5 class="mt-2">Left Task</h5>
      <ul>
        <li>High : w</li>
        <li>Medium : s</li>
        <li>Low : x</li>
      </ul>
      <h5 class="mt-2">Right Task</h5>
      <ul>
        <li>a : m</li>
        <li>b : ,</li>
        <li>c : .</li>
      </ul>
      <p>&nbsp;</p>
      <p><a class="link-dark" href="/instructions-1"><em>Read full instructions</em></a></p>
      <p><a class="link-dark" href="/faq"><em>What is the point of this game?</em></a></p>
      <p><a class="link-dark" href="/"><em>Return to Home page</em></a></p>
    </div>

    <!-- Simulation -->
    <div id='phaser-game'></div>

    <!-- Parameters Form -->
    <input style="display: none;" type="number" min="0" step="1" id="l_bar_up_rate" class="param-inputs" />
    <input style="display: none;" type="number" min="0" step="1" id="l_bar_down_rate" class="param-inputs" />
    <input style="display: none;" type="number" min="0" step="1" id="l_bar_penalty_rate" class="param-inputs" />
    <input style="display: none;" type="number" min="0" step="1" id="l_bar_delay_amount" class="param-inputs" />
    <input style="display: none;" type="number" min="0" step="1" id="r_bar_up_rate" class="param-inputs" />
    <input style="display: none;" type="number" min="0" step="1" id="r_bar_down_rate" class="param-inputs" />
    <input style="display: none;" type="number" min="0" step="1" id="r_bar_penalty_rate" class="param-inputs" />
    <input style="display: none;" type="number" min="0" step="1" id="r_bar_delay_amount" class="param-inputs" />
    <input style="display: none;" placeholder="code" id="admin_code" />

    <!-- Phaser -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/phaser/3.55.2/phaser.min.js"
      integrity="sha512-kg6fSrg6FkD9Ua02PzuA289KatVkTp6HdiFrSKwnz1bKBeKe5JG54rNeYZeghYO/I4ka49rb9H/9Ezcq9Se3iQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="js/main.js"></script>
    <script src="js/menuScene.js"></script>
    <script src="js/parametersScene.js"></script>
    <script src="js/leftTaskScene.js"></script>
    <script src="js/rightTaskScene.js"></script>
    <script src="js/bothTasksScene.js"></script>
    <!-- "util" folder code courtesy of William Clarkson / https://phasergames.com/. -->
    <script src="js/util/formUtil.js" type="text/javascript">
    </script>
    <script src="js/util/alignGrid.js" type="text/javascript">
    </script>
    <script>
      // Toggle sidebar button.
      function ToggleSidebar() {
        if (document.getElementById("sidebar").style.display == "none") {
          document.getElementById("sidebar").style.display = "block";
        }
        else {
          document.getElementById("sidebar").style.display = "none";
        }
      }

      // Prevent "e" being put in the input fields.
      document.querySelector(".param-inputs").addEventListener("keypress", function (evt) {
        if (evt.which != 8 && evt.which != 0 && evt.which < 48 || evt.which > 57) {
          evt.preventDefault();
        }
      });
    </script>
  </body>

</html>