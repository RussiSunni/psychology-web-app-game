<!DOCTYPE html>
<html lang="">

<head>
    <meta content="user-scalable=0, initial-scale=1,minimum-scale=1, maximum-scale=1, width=device-width, minimal-ui=1"
        name="viewport">
    </meta>
    <title>visual-kalsbeek-program</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato&family=Montserrat&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat',
                sans-serif;
        }
    </style>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a id="edit-button" class="btn btn-info" role="button" href="/instructions-3/edit"
                            style="display:none">Edit</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="btn btn-info" role="button" href="/">Finish</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <h1>Both Tasks</h1>
        <div id="instructions"></div>
    </div>

    <nav class="navbar fixed-bottom bg-light">
        <input id="edit-code" type="text" class="form-control" placeholder="code" aria-label="Code"
            style="width: 100px">
    </nav>
    <script>
        // Show the edit button, if code is correct.
        document.getElementById('edit-code').addEventListener("input", function (e) {
            if (this.value == "1967") {
                document.getElementById('edit-button').style.display = "block";
            }

            // Save to browser storage for use in next step.
            localStorage.setItem("code", this.value);
        });

        // Load the instructions.
        fetch('/instructions-3/show')
            .then(function (response) {
                return response.json();
            }).then(function (data) {
                document.getElementById("instructions").innerHTML = data.both_tasks;

            });
    </script>
</body>

</html>