<script>
    // To set active link.
    let url = window.location.href;
    // Select all the anchor tags
    let links = document.querySelectorAll("a");
    // Loop through the link lists
    links.forEach((link) => {
        // Remove .active on all links.
        link.classList.remove("active");
        var href = link.href;
        if (href == url)
            link.classList.add("active");
    });

</script>